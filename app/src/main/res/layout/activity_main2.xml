<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample11"
    android:orientation="vertical"
    tools:context=".MainActivity2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@color/ViewBackgroundColor_2"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Send Data API Retrofit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Edittext_UserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="12dp"
            android:digits="1234567890"
            android:hint="UserID"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/white"
            android:textColorHint="@color/lightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Edittext_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="12dp"
            android:digits="1234567890"
            android:hint="ID"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/white"
            android:textColorHint="@color/lightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/Edittext_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="12dp"
            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
            android:hint="Enter The Title"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/white"
            android:textColorHint="@color/lightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Edittext_Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="12dp"
            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
            android:hint="Enter The Body"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="5"
            android:textColor="@color/white"
            android:textColorHint="@color/lightGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="12dp"
            android:backgroundTint="@color/orange"
            android:text="Send Data" />

        <Button
            android:id="@+id/ViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="12dp"
            android:backgroundTint="@color/orange"
            android:text="View Data" />

</LinearLayout>